<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/roll1"
        android:layout_width="181dp"
        android:layout_height="93dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="44dp"
        android:text="roll"
        app:layout_constraintBottom_toTopOf="@+id/winner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pic1" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="97dp"
        android:layout_height="85dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/score1"
        android:layout_width="73dp"
        android:layout_height="63dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="236dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score2"
        android:layout_width="76dp"
        android:layout_height="69dp"
        android:layout_marginStart="308dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="236dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.488" />

    <TextView
        android:id="@+id/dicegame"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="51dp"
        android:text="DICE GAME"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pic1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pic1"
        android:layout_width="115dp"
        android:layout_height="182dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="86dp"
        app:layout_constraintBottom_toTopOf="@+id/roll1"
        app:layout_constraintEnd_toStartOf="@+id/pic2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dicegame"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="117dp"
        android:layout_height="181dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="86dp"
        app:layout_constraintBottom_toTopOf="@+id/roll1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pic1"
        app:layout_constraintTop_toBottomOf="@+id/dicegame"
        app:layout_constraintVertical_bias="0.46"
        app:srcCompat="@drawable/blank" />

</androidx.constraintlayout.widget.ConstraintLayout>